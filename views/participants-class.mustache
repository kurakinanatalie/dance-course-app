{{> layouts/main }}

<h2 class="mb-4">Participants for Class</h2>

{{#participants.length}}
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        {{#participants}}
          <tr>
            <td>{{name}}</td>
            <td>{{email}}</td>
          </tr>
        {{/participants}}
      </tbody>
    </table>
  </div>
{{/participants.length}}

{{^participants.length}}
  <p class="text-muted">No participants yet.</p>
{{/participants.length}}

<a href="/classes" class="btn btn-outline-secondary mt-4">Back to Classes</a>
