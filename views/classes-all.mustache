{{> layouts/main }}

<h2 class="mb-4">All Classes</h2>

{{#isOrganiser}}
  <div class="mb-4 text-end">
    <a href="/classes/add" class="btn btn-success">Add New Class</a>
  </div>
{{/isOrganiser}}

<div class="row row-cols-1 g-4">
  {{#classes}}
    <div class="col">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">{{courseName}}</h5>
          <p class="card-text">
            <strong>Date & Time:</strong> {{dateTime}}<br>
            <strong>Location:</strong> {{location}}
          </p>

          <a href="/classes/{{_id}}/book" class="btn btn-primary btn-sm">Book Class</a>

          {{#isOrganiser}}
            <a href="/classes/edit/{{_id}}" class="btn btn-outline-secondary btn-sm">Edit</a>
            <form method="POST" action="/classes/delete/{{_id}}" class="d-inline">
              <input type="hidden" name="courseId" value="{{courseId}}">
              <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
            </form>
            <a href="/classes/{{_id}}/participants" class="btn btn-outline-info btn-sm ms-2">View Participants</a>
          {{/isOrganiser}}
        </div>
      </div>
    </div>
  {{/classes}}
</div>

{{^classes}}
  <p>No classes found.</p>
{{/classes}}